{
  "name": "relativiser",
  "displayName": "relativiser",
  "description": "Returns the relative path of a file from another one selected on VS Code's UI",
  "version": "0.0.1",
  "publisher": "bmbferreira",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
      "type": "git",
      "url": "https://github.com/bmbferreira/relativiser"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:relativiser.getPath"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "relativiser.getPath",
        "title": "Get relative path"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "relativiser.getPath"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
